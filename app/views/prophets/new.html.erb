
<div class="uk-container-xsmall uk-container uk-padding uk-padding-remove-vertical uk-width-2-3@s">
  <div class="uk-margin-top">
    <%= form_for @prophet do |f| %>
      <fieldset class="uk-fieldset">
        <div class="uk-margin">
          <%= f.label :published_at, "達成予定", class: "uk-form-label" %>
          <small>※この日時にTweetが自動投稿されます</small>
          <div>
            <%= f.text_field :published_at, required: true, id: "calendar" %>
          </div>
        </div>

        <div class="uk-margin">
          <%= f.label :text, "予言ツイート", class: "uk-form-label" %>
          <div>
            <%= f.text_area :text, class: "uk-textarea", rows: 4, required: true %>
          </div>
        </div>


        <div class="uk-margin uk-flex uk-flex-center">
          <%= f.submit '予言する', class: "uk-button uk-button-secondary" %>
        </div>
      </fieldset>
    <% end %>
  </div>
</div>


<script>

flatpickr("#calendar", {
  enableTime: true,
  time_24hr: true,
  minDate: "today"
});

</script>
